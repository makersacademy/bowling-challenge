== GAME LOGIC ==

var frame = 0
var total = 0
var roll, pins, score

newFrame
roll = 1
pins = 10
frame++

rollTheBall or Enter Score// push button; unless game over

  countPinsDown √
    score = random() <= pins
    pins = score

  updateTotal √
    if bonuses?
      score *=2 unless frame == "11"
      bonuses--
      total += score

  recordBonuses √
    if isAStrike
      bonuses += 2
    else if isASpare
      bonuses++
    endif

  endRoll √
    if roll == 2 or is a strike
      newFrame
    else
      roll++
    endif

  isAStrike() {pins == 0 && roll == 1} √
  isASpare() {pins == 0 && roll == 2} √

