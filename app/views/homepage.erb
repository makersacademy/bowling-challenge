  <meta name="viewport" content="width=device-width">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="css/style.css"></link>
  <link rel="icon" href="/media/favicon.ico?" type="image/x-icon">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <title>Bowling Scorecard</title>
</head>

<body>
  <div class="container">
    <header class="header">
      <h1>Bowling Scorecard</h1>
    </header>
    <div class='buttons-section'>
      <button class='start-game'>Start Game</button>
    <% 11.times do |i| %>
      <button id="button<%=i%>" class="input-button-default" value="<%=i%>"><%=i%></button>
    <% end %>
    </div>

    <div class='scorecard-section'>
      <div class='scorecard'>
        <div class='framebox-1'>
          <div class='title'>1</div>
          <div class='scoreboxleft' id='roll1box1'></div>
          <div class='scoreboxright' id='roll2box1'></div>
          <div class='scoreboxtotal' id='totalbox1'></div>
        </div>

        <% 8.times do |i| %>
        <div class='framebox-2-10'>
          <div class='title'><%=i+2%></div>
          <div class='scoreboxleft' id='roll1box<%=i+2%>'></div>
          <div class='scoreboxright' id='roll2box<%=i+2%>'></div>
          <div class='scoreboxtotal' id='totalbox<%=i+2%>'></div>
        </div>
        <% end %>

        <div class='framebox-2-10'>
          <div class='title'>10</div>
          <div class='scoreboxleft-10' id='roll1box10'></div>
          <div class='scoreboxmiddle-10' id='roll2box10'></div>
          <div class='scoreboxright-10' id='roll3box10'></div>
          <div class='scoreboxtotal' id='totalbox10'></div>
        </div>

        <div class='framebox-2-10'>
          <div class='title'>Total</div>
          <div class='scoreboxtotal' id='totalboxtotal'></div>
        </div>
      </div>
    </div>
  </div>

  <footer class="footer">
    <p>Created by Chris.</p>
  </footer>

  <script src="scripts/gameView.js"></script>
  <script src="scripts/frameModel.js"></script>
  <script src="scripts/gameModel.js"></script>
  <script src="scripts/gameController.js"></script>
  <script src="scripts/index.js"></script>
</body>
