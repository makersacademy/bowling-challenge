# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Indentation override for all JS under lib directory
[**.js]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2

[**.yml]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true