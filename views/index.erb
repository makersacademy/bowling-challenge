<!DOCTYPE html>
<html>
<head>
  <title>Bowling</title>
  <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
  <script src="js/bowling.js" type="text/javascript"></script>
  <script src="js/interface.js" type="text/javascript"></script>
  <link rel="stylesheet" href="css/style.css" >
</head>

<body>
  <h1>Bowling Scorecard</h1>
  <div class="scoring-buttons">
    <button type="button" id="button0" name="button0">0</button>
    <button type="button" id="button1" name="button1">1</button>
    <button type="button" id="button2" name="button2">2</button>
    <button type="button" id="button3" name="button3">3</button>
    <button type="button" id="button4" name="button4">4</button>
    <button type="button" id="button5" name="button5">5</button>
    <button type="button" id="button6" name="button6">6</button>
    <button type="button" id="button7" name="button7">7</button>
    <button type="button" id="button8" name="button8">8</button>
    <button type="button" id="button9" name="button9">9</button>
    <button type="button" id="button10" name="button10">10</button>
  </div>

  <table>
    <tr style="border: 1px solid black" class="frame-title" >
      <th colspan="6">Frame 1</th>
      <th colspan="6">Frame 2</th>
      <th colspan="6">Frame 3</th>
      <th colspan="6">Frame 4</th>
      <th colspan="6">Frame 5</th>
      <th colspan="6">Frame 6</th>
      <th colspan="6">Frame 7</th>
      <th colspan="6">Frame 8</th>
      <th colspan="6">Frame 9</th>
      <th colspan="6">Frame 10</th>
    </tr>
    <tr class="frame-score">
      <td style="border: none" colspan="3" id="bowl1-bowl1"></td>
      <td colspan="3" id="bowl1-bowl2"></td>
      <td style="border: none" colspan="3" id="bowl1-bowl3"></td>
      <td colspan="3" id="bowl1-bowl4"></td>
      <td style="border: none" colspan="3" id="bowl1-bowl5"></td>
      <td colspan="3" id="bowl1-bowl6"></td>
      <td style="border: none" colspan="3" id="bowl1-bowl7"></td>
      <td colspan="3" id="bowl1-bowl8"></td>
      <td style="border: none" colspan="3" id="bowl1-bowl9"></td>
      <td colspan="3" id="bowl1-bowl10"></td>
      <td style="border: none" colspan="3" id="bowl1-bowl11"></td>
      <td colspan="3" id="bowl1-bowl12"></td>
      <td style="border: none" colspan="3" id="bowl1-bowl13"></td>
      <td colspan="3" id="bowl1-bowl14"></td>
      <td style="border: none" colspan="3" id="bowl1-bowl15"></td>
      <td colspan="3" id="bowl1-bowl16"></td>
      <td style="border: none" colspan="3"id="bowl1-bowl17"></td>
      <td colspan="3" id="bowl1-bowl18"></td>
      <td style="border: none" colspan="2" id="bowl1-bowl19"></td>
      <td colspan="2" id="bowl1-bowl20"></td>
      <td colspan="2" id="bowl1-bowl21"></td>
    </tr>
    <tr class="track-score" >
      <th id="frame1" colspan="6"></th>
      <th id="frame2" colspan="6"></th>
      <th id="frame3" colspan="6"></th>
      <th id="frame4" colspan="6"></th>
      <th id="frame5" colspan="6"></th>
      <th id="frame6" colspan="6"></th>
      <th id="frame7" colspan="6"></th>
      <th id="frame8" colspan="6"></th>
      <th id="frame9" colspan="6"></th>
      <th id="frame10" colspan="6"></th>
    </tr>
  </table>
</body>
</html>
